extends layout

block content
  .row
    .col-md-4
    .col-lg-4#login
      .text-center
        h2.text-center.page-header(style='margin:2px;padding:5px;') Enter Your Email
      form(method="post" action="/users/forgot")
        input.form-control(name='email', type='email', placeholder='E-mail', autofocus='')
        .form-group
        input.btn-block.btn.btn-primary(name='submit', type='submit', value='send')
        br
        br
        br
    .col-md-4
        if success
          .alert.alert-success
            strong Success, #{success}
        if errors 
          br
          br
          br
          br
          each error, i in errors
            div.alert.alert-danger.alert-dismissible.show
              strong Error! #{error.msg}
              a.close.customclose(href='#', data-dismiss='alert') &times;
          
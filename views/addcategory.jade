extends layout

block content
  if errors
    ul.errors
      each error, i in errors
        li.alert.alert-danger #{error.msg}
  .row
    .col-md-3
    .col-md-6
      .panel.panel-primary
        .panel-heading
          h1.text-center=title
        .panel-body
          form(method='POST', action='/categories/add')
            .formgroup
              label Title:
              input.form-control(name='title', type="text")
            br
            p.text-center
              input.btn.btn-primary(name="submit", type="submit", value="save")
  .row
    each category, i in categories
      .col-md-3
      .col-md-3
        p(style="font-weight: 600") #{category.title}
      .col-md-4      
        a.pull-right.btn.btn-danger.btn-sm.my-btn(href = '/categories/delete/#{category._id}')  DELETE

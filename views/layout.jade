doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(http-equiv='content-type', content='text/html; charset=UTF-8')
    title= title
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    // Navigation
    nav.navbar.navbar-expand-lg.bg-warning.text-white
      .container
        a.navbar-brand.text-white(href='/') recipify.com
        button.navbar-toggler.navbar-toggler-right(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link.text-white(href='/posts/add') Add Recipe
            li.nav-item
              a.nav-link.text-white(href='/categories/add') Add Category
            if !user
              li.nav-item
                a.nav-link.text-white(href="/users/signup") Sign Up
              li.nav-item
                a.nav-link.text-white(href="/users/login") Login
            else         
              li.nav-item
                a.nav-link.text-white(href="/users/logout") Logout 
              li.nav-item
                span.nav-link.text-white #{user.username}               

    - var msg = messages();
    if(msg)
      .alert.alert-dismissible.mainalert(data-dismiss='alert')!=msg



    block content
    hr
    p.text-center Copyright 2018 Recipify.com
